<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="left"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/book" />

    <TextView
        android:id="@+id/book_name"
        android:gravity="left"
        android:width="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="42dp"
        android:layout_toRightOf="@+id/cover"
        android:text="@string/blank" />

    <TextView
        android:id="@+id/publisher"
        android:gravity="left"
        android:width="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_alignRight="@+id/book_name"
        android:layout_below="@+id/book_name"
        android:text="@string/blank" />
    <TextView
        android:id="@+id/author"
        android:gravity="left"
        android:width="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_alignRight="@+id/publisher"
        android:layout_below="@+id/publisher"
        android:text="@string/blank"/>

    <TextView
        android:id="@+id/pubdate"
        android:width="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_alignRight="@+id/author"
        android:layout_below="@+id/author"
        android:gravity="left"
        android:text="@string/blank" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:width="180dp"
        android:gravity="left"
        android:layout_marginLeft="42dp"
        android:layout_alignRight="@+id/pubdate"
        android:layout_below="@+id/pubdate"
        android:text="@string/blank" />
    
</RelativeLayout>